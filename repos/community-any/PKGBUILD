# $Id$
# Maintainer: Lukas Jirkovsky <l.jirkovsky@gmail.com>
pkgname=ttf-gentium
pkgver=1.02
_pkgver=102
pkgrel=4
pkgdesc="Wide range of Latin-based alphabets, defines roughly 1,500 glyphs."
arch=('any')
url="http://scripts.sil.org/Gentium"
license=('custom:OFL')
depends=('fontconfig' 'xorg-fonts-encodings' 'xorg-font-utils')
install=gentium.install
source=("http://scripts.sil.org/cms/scripts/render_download.php?site_id=nrsi&format=file&media_id=Gentium_${_pkgver}_W&filename=Gentium_${_pkgver}_W.zip")
md5sums=('79075a7d0b755294662bf4601fffc53c')

build() {
  cd "$srcdir"/Gentium$_pkgver
  install -D -m644 OFL.txt "$pkgdir"/usr/share/licenses/$pkgname/OFL
  mkdir -p  "$pkgdir"/usr/share/fonts/TTF
  install -m644 *.TTF "$pkgdir"/usr/share/fonts/TTF/
}
