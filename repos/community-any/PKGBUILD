pkgname=inxi
pkgver=1.4.17
pkgrel=1
pkgdesc="script to get system information"
arch=('any')
url="http://inxi.org"
license=('GPL')
source=(http://inxi.googlecode.com/svn/trunk/inxi)

package() {
  cd "$srcdir"
  install -D -m755 inxi $pkgdir/usr/bin/inxi
}

