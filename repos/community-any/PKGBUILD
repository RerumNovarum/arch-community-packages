pkgname=inxi
pkgver=1.4.24
pkgrel=1
pkgdesc="script to get system information"
arch=('any')
url="http://inxi.org"
license=('GPL')
source=(inxi-$pkgver::http://inxi.googlecode.com/svn/trunk/inxi)

package() {
  cd "$srcdir"
  install -D -m755 inxi-$pkgver "$pkgdir/usr/bin/inxi"
}

