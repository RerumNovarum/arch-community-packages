pkgname=python2-rope
pkgver=0.9.3
pkgrel=6
pkgdesc='Python refactoring library'
arch=('any')
url='http://rope.sourceforge.net/'
license=('GPL')
depends=('python2')
source=("http://pypi.python.org/packages/source/r/rope/rope-$pkgver.tar.gz")
sha256sums=('270ad551658e0bd05c17204aff268523e7c3aba6d1aa3665a8f928eb34cd2281')

build() {
  cd "rope-$pkgver"

  python2 setup.py build
}

package() {
  cd "rope-$pkgver"

  python2 setup.py install --root="$pkgdir" --optimize=1
}

