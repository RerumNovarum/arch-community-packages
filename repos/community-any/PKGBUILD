# Contributor: Nathan Jones <nathanj@insightbb.com>

pkgname=python2-memcached
pkgver=1.48
pkgrel=3
url="https://bugs.launchpad.net/python-memcached"
arch=('any')
license=('Python')
makedepends=('python2-distribute' 'python-distribute')
source=(ftp://ftp.tummy.com/pub/python-memcached/python-memcached-$pkgver.tar.gz LICENSE)
md5sums=('58f8c328304df6aca1f8b60170e98932'
         '5286ea4c34766a357085694e0984f116')

packaged() {
pkgdesc="A Python2 interface to memcached"
depends=('python2')
  cd "$srcdir"/
  cp -r $pkgbase-$pkgver $pkgbase-2-$pkgver
  cd $pkgbase-2-$pkgver

  # python2 fix
  sed -i 's_#!/usr/bin/env python_#!/usr/bin/env python2_' memcache.py

  python2 setup.py install --root="$pkgdir"
  install -Dm644 "${srcdir}/LICENSE" "${pkgdir}/usr/share/licenses/${pkgname}/LICENSE"
}
