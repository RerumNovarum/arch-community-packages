# $Id$
# Maintainer: Sven-Hendrik Haase <sh@lutzhaase.com>

pkgname=urbanterror-data
pkgver=4.1
pkgrel=8
pkgdesc="A team-based tactical shooter based on the Quake 3 Engine (data files)"
arch=('any')
url="http://www.urbanterror.net"
license=('custom:freeware')
depends=()
makedepends=()
source=("ftp://ftp.snt.utwente.nl/pub/games/urbanterror/UrbanTerror_41_FULL.zip")
md5sums=('1370306ea236f65f595e7ca70765e469')

build() {
	cd $srcdir
}

package() {
	install -d $pkgdir/opt/urbanterror/q3ut4/demos
	
	cd $pkgdir/opt/urbanterror

	for i in $srcdir/UrbanTerror/q3ut4/*.{cfg,pk3,txt}; do
	    mv "$i" q3ut4/
	    chmod 644 "q3ut4/$(basename "$i")"
	done
	install -m644 $srcdir/UrbanTerror/q3ut4/demos/tutorial.dm_68 q3ut4/demos/TUTORIAL.dm_68

  install -Dm644 $pkgdir/opt/urbanterror/q3ut4/readme41.txt $pkgdir/usr/share/licenses/$pkgname/LICENSE
}

# vim: sw=2:ts=2 et:
