pkgname=libgap
pkgver=4.7.7
pkgrel=1
_commit=5ba1da0ba339
pkgdesc="A C library version of the GAP kernel"
arch=('i686' 'x86_64')
url="https://bitbucket.org/vbraun/libgap"
license=('GPL')
depends=('gmp')
source=("https://bitbucket.org/vbraun/libgap/get/5ba1da0ba339.zip")
#source=("http://www.sagemath.org/packages/upstream/$pkgname/$pkgname-$pkgver.tar.gz")
md5sums=('fa7838e4cd3fa61044137f1ed4b8fe8f')

build() {
  cd vbraun-libgap-$_commit

  ./configure --prefix=/usr
  make
}

package() {
  cd vbraun-libgap-$_commit
  make install DESTDIR="$pkgdir"
}

