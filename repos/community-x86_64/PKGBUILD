# Contributor: Michael Kanis <mkanis@gmx.de>
pkgname=gsql
pkgver=0.2.1
pkgrel=2
pkgdesc="Integrated database development tool for GNOME"
url="http://gsql.org/"
license=('GPL')
arch=('i686' 'x86_64')
depends=('gtk2>=2.12' 'gtksourceview' 'libmysqlclient' 'vte')
source=(http://gsql.googlecode.com/files/${pkgname}-${pkgver}.tar.bz2)
md5sums=('faf236290f222df013198cb0e9cb8555')

build() {
	cd $srcdir/$pkgname-$pkgver
	./configure --prefix=/usr --sysconfdir=/etc || return 1
	make || return 1
	make DESTDIR=$startdir/pkg install
} 
