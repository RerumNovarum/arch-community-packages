# Maintainer: Eric Belanger <eric@archlinux.org>
# Contributor: Krzysiek Wojszko <w.krzysiek@gmail.com>

pkgname=auctex
pkgver=11.85
pkgrel=1
pkgdesc="An extensible package for writing and formatting TeX files in Emacs"
arch=('i686' 'x86_64') 
url="http://www.gnu.org/software/auctex/"
license=('GPL3')
depends=('emacs' 'ghostscript' 'tetex' 'texinfo')
install=auctex.install
source=(http://ftp.gnu.org/pub/gnu/auctex/$pkgname-$pkgver.tar.gz)
md5sums=('597c2adbee11877fe1f9b57baf0ba165')
sha1sums=('5b4ab3fbbe784f43118e52cc31b93a183f84d89f')

build() {
  cd $startdir/src/$pkgname-$pkgver
  ./configure --prefix=/usr --localstatedir=/var
  make || return 1
  make DESTDIR=$startdir/pkg install
}
