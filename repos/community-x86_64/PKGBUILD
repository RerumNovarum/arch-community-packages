# $Id$
# Contributor: Sergej Pupykin <pupykin.s+arch@gmail.com>

pkgname=freewrl
pkgver=1.22.6
pkgrel=1
pkgdesc="VRML viewer"
arch=('i686' 'x86_64')
url="http://freewrl.sourceforge.net/"
license=('GPL')
depends=('java-runtime' 'libx11' 'libjpeg' 'libpng' 'expat' 'mesa' 'lesstif' 'libxaw' 'glew' 'curl')
makedepends=('java-environment' 'xulrunner')
optdepends=('ttf-bitstream-vera: text support')
options=(!libtool)
source=(http://downloads.sourceforge.net/sourceforge/$pkgname/$pkgname-$pkgver.tar.bz2)
md5sums=('ba1b0900f6dba5b694f1ed63fcc164c5')

build() {
  . /etc/profile.d/openjdk6.sh
  cd $srcdir/$pkgname-$pkgver

  LDFLAGS="-Wl,-rpath -Wl,/usr/lib/xulrunner-devel-1.9.1/lib -lX11" ./configure \
    --prefix=/usr --with-fontsdir=/usr/share/fonts/TTF --enable-libeai \
    --enable-libcurl
  make || return 1
  make DESTDIR=$pkgdir install || return 1
}

