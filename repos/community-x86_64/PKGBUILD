# Maintainer: Aaron Schaefer <aaron@elasticdog.com>
pkgname=vim-rails
pkgver=3.4
_sourceid=10297
pkgrel=1
pkgdesc='A Vim plugin for enhanced Ruby on Rails application development'
arch=('i686' 'x86_64')
url='http://www.vim.org/scripts/script.php?script_id=1567'
license=('custom:vim')
depends=('vim')
install=vimdoc.install
source=("http://www.vim.org/scripts/download_script.php?src_id=$_sourceid")
md5sums=('cb13eea98e00e5f9a99b579e7b145b11')

build() {
  cd $srcdir
  mv download_script.php?src_id=$_sourceid rails-$pkgver.zip
  unzip -qqo rails-$pkgver.zip

  install -D -m644 autoload/rails.vim $pkgdir/usr/share/vim/autoload/rails.vim
  install -D -m644 doc/rails.txt $pkgdir/usr/share/vim/doc/rails.txt
  install -D -m644 plugin/rails.vim $pkgdir/usr/share/vim/plugin/rails.vim
}
