# Contributor: tocer.deng <tocer.deng@gmail.com>

pkgname=apvlv
pkgver=0.1.0
pkgrel=1
pkgdesc="A PDF Viewer which behaves like Vim"
arch=('i686' 'x86_64')
url="http://code.google.com/p/apvlv/"
license=('GPL')
depends=('poppler-glib' 'libdjvu')
source=(http://apvlv.googlecode.com/files/$pkgname-${pkgver}-Source.tar.gz)
md5sums=('aa58659c111e5ba6eec23d37e9556d72')

build() {
	cd $srcdir/$pkgname-$pkgver-Source
	mkdir scripts/
	chmod +x autogen.sh
	./autogen.sh
	./configure --prefix=/usr --without-umd --with-sysconfdir=/etc --with-mandir=/usr/share/man
	make clean
	make
}

package() {
	cd $srcdir/$pkgname-$pkgver-Source
	make DESTDIR=$pkgdir install
}
