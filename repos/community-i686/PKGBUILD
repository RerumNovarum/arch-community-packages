# Contributor: Krzysztof Stasiorowski <krzysiekst@gmail.com>

pkgname=qpxtool
pkgver=0.7.0
pkgrel=1
pkgdesc="Open Source Solution which intends to give you access to all available Quality Checks"
arch=('i686' 'x86_64')
url="http://qpxtool.sourceforge.net/"
license=('GPL')
depends=('qt3')
source=(http://downloads.sourceforge.net/sourceforge/$pkgname/$pkgname-$pkgver.tar.bz2 \
	qpxtool.desktop
	qpx_transport.patch
	qpx_crash.patch)
md5sums=('6262dba1ede372e36c198f636bcd4274'
         'd60fb7ca0dbb2c4da11dc43adf2a1de4'
         '042ec368f7001817bf86e96cfbc58b89'
         'fe50d89c96a75cc5d69dbea789e16634')

build() {
  . /etc/profile.d/qt3.sh
  export PATH=$QTDIR/bin:$PATH

  cd $startdir/src/$pkgname-$pkgver

  ./configure --prefix=/usr
  make || return 1
  make DESTDIR=$pkgdir install || return 1

  install -D -m0644 $startdir/src/qpxtool.desktop $startdir/pkg/usr/share/applications/qpxtool.desktop
}
