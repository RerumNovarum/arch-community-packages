# Maintainer: Jonathan Conder <jonno.conder@gmail.com>
# Contributor: Jaroslaw Swierczynski <swiergot@aur.archlinux.org>
# Contributor: Camille Moncelier <pix@devlife.org>

pkgname=linuxtv-dvb-apps
pkgver=1465
pkgrel=1
_hgrev=69fc03702a64
pkgdesc='Viewer programs for DVB cards'
arch=('i686' 'x86_64')
url='http://www.linuxtv.org/'
license=('GPL')
source=("http://linuxtv.org/hg/dvb-apps/archive/$_hgrev.tar.bz2")
sha256sums=('4c32fd895d826254779f1020f69a1978ea3c0130440f82f7b18e2d8e5378804a')

build() {
  cd "dvb-apps-$_hgrev"
  rm -rf include

  make -C lib
  make -C util
}

package() {
  cd "dvb-apps-$_hgrev"

  make -C lib DESTDIR="$pkgdir" install
  make -C util DESTDIR="$pkgdir" install

  chmod 755 "$pkgdir"/usr/lib/*.so*
}
