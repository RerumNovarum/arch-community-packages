# Maintainer: Lukas Jirkovsky <l.jirkovsky@gmail.com>
pkgname=intellij-idea-libs
pkgver=10.0.1
_pkgver=99.32
pkgrel=1
pkgdesc="Architecture dependend libraries needed by Intellij Idea IDE"
arch=('i686' 'x86_64')
url="http://www.jetbrains.org/"
license=('apache')
depends=('glibc')
source=(http://download.jetbrains.com/idea/ideaIC-$pkgver.tar.gz)
md5sums=('fe0c0249658b25d3f0909ca8f58ba934')

build() {
  cd "$srcdir"

  install -d -m755 "$pkgdir/"usr/{bin,lib}
  [ $CARCH == "x86_64" ] && SUFFIX=64
  install -m755 "idea-IC-$_pkgver"/bin/fsnotifier${SUFFIX} "$pkgdir"/usr/bin
  install -m644 "idea-IC-$_pkgver"/bin/libbreakgen${SUFFIX}.so "$pkgdir"/usr/lib
}

# vim:set ts=2 sw=2 et:
