# Contributor: grimi <grimi at poczta dot fm>

pkgname=urbanterror
pkgver=4.2
pkgrel=1
pkgdesc="A team-based tactical shooter based on the Quake 3 Engine"
arch=('i686' 'x86_64')
url="http://www.urbanterror.net"
license=('GPL2')
depends=('sdl' 'openal' 'curl' 'urbanterror-data')
makedepends=('mesa')
source=("http://www.okgam3r.com/q3ut4/UrbanTerror${pkgver}.zip"
        "urbanterror.sh"
        "urbanterror-server.sh"
        "urbanterror.desktop"
        "urbanterror.png")
md5sums=('cbbbad45afb35d8ec63c268784be2674'
         'f9fc4c734741aa0453079a2cfb31638b'
         'f9fc4c734741aa0453079a2cfb31638b'
         '08a99f4d7ad63024bc886e118ddcbc0f'
         'f9a57d898df73f43c6a85c8d8cc455ba')

package() {
  install -d $pkgdir/opt/urbanterror

  cd $pkgdir/opt/urbanterror

  # Copy binaries.
  [[ $CARCH == "i686" ]] && install -m755 $srcdir/New\ folder/Quake3-UrT.i386 Quake3-UrT.i386
  [[ $CARCH == "i686" ]] && install -m755 $srcdir/New\ folder/Quake3-UrT-Ded.i386 Quake3-UrT-Ded.i386
  [[ $CARCH == "x86_64" ]] && install -m755 $srcdir/New\ folder/Quake3-UrT.x86_64 Quake3-UrT.x86_64
  [[ $CARCH == "x86_64" ]] && install -m755 $srcdir/New\ folder/Quake3-UrT-Ded.x86_64 Quake3-UrT-Ded.x86_64

  # Copy desktop launcher.
  install -Dm644 $srcdir/urbanterror.desktop $pkgdir/usr/share/applications/urbanterror.desktop
  install -Dm644 $srcdir/urbanterror.png $pkgdir/usr/share/pixmaps/urbanterror.png

  # Copy launch scripts.
  install -Dm755 $srcdir/urbanterror.sh $pkgdir/usr/bin/urbanterror
  install -Dm755 $srcdir/urbanterror-server.sh $pkgdir/usr/bin/urbanterror-server
}

# vim: sw=2:ts=2 et:
