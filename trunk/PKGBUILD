pkgname=roxterm
pkgver=1.20.3
pkgrel=1
pkgdesc="Tabbed, VTE-based terminal emulator"
arch=('i686' 'x86_64')
url="http://roxterm.sourceforge.net/"
license=('GPL3')
depends=('libglade' 'dbus-glib' 'vte' 'hicolor-icon-theme' 'dbus')
makedepends=('docbook-xsl' 'xmlto' 'po4a')
install=roxterm.install
source=(http://downloads.sourceforge.net/roxterm/roxterm-$pkgver.tar.gz)
md5sums=('c20f3a17dcd921b4f9b105e7c40b243e')
sha1sums=('548f5b836f28b4f0e69c5e6d17a6c4a328aaaaad')

build() {
  cd "${srcdir}/roxterm-${pkgver}"

  ./configure --prefix=/usr
  make
}

package() {
  cd "${srcdir}/roxterm-${pkgver}"
  make DESTDIR="${pkgdir}" install
}

