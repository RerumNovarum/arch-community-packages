# Maintainer: garion < garion @ mailoo.org >

# The old maintainer and the creatorof PKGBUILD is leemars

pkgname=ibus-qt
pkgver=1.3.1
pkgrel=1
pkgdesc="IBus qt library and IBus qt input method plugin"
arch=('i686' 'x86_64')
license=('LGPL')
url="http://ibus.googlecode.com"
depends=('qt>=4.5' 'ibus>=1.3.0' 'icu')
makedepends=('cmake' 'automoc4' 'doxygen')
conflicts=('ibus-qt-git')
source=("http://ibus.googlecode.com/files/${pkgname}-${pkgver}-Source.tar.gz")
md5sums=(769e8872ca8a59327b2073ce2f142589)

build() {
    cd ${srcdir}/${pkgname}-${pkgver}-Source
    mkdir build && cd build
    cmake .. -DCMAKE_INSTALL_PREFIX=/usr -DCMAKE_CXX_FLAGS="-Wall"
    make || return 1
    make DESTDIR=${pkgdir} install || return 1
}
