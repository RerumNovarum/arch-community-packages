pkgname=flowcanvas
pkgver=0.6.4
pkgrel=1
pkgdesc="Gtkmm/Gnomecanvasmm widget for boxes-and-lines style environments"
arch=(i686 x86_64)
url="http://drobilla.net/software/flowcanvas/"
depends=('libgnomecanvasmm' 'graphviz')
makedepends=('boost' 'python2')
license=('GPL')
install=$pkgname.install
source=(http://download.drobilla.net/$pkgname-$pkgver.tar.bz2)
md5sums=('8f4b9fe54aee0769e1ae63546b477f42')

build() {
  cd "$srcdir/$pkgname-$pkgver"

  # fix for python 2.7
  sed -i 's:^#!.*bin/env python:#!/usr/bin/env python2:' waf

  ./waf configure --prefix=/usr
  ./waf build $MAKEFLAGS
}

package() {
  cd "$srcdir/$pkgname-$pkgver"

  ./waf install --destdir="$pkgdir"
}

