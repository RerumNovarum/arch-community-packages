pkgname=urbanterror-data
pkgver=4.2.007
pkgrel=1
epoch=2
pkgdesc="A team-based tactical shooter based on the Quake 3 Engine (data files)"
arch=('any')
url="http://www.urbanterror.net"
license=('custom:freeware')
source=("http://cdn.urbanterror.info/urt/42/zips/UrbanTerror42_full_007.zip")
md5sums=('0b3f2b609591aad8c86859f17fc3a88b')

build() {
	cd $srcdir
}

package() {
  mkdir -p $pkgdir/opt/urbanterror/
  cp $srcdir/*.{pk3,txt,cfg} $pkgdir/opt/urbanterror/

  install -Dm644 $srcdir/readme42.txt $pkgdir/usr/share/licenses/$pkgname/LICENSE

  #echo -e "\nseta cl_cURLLib \"/usr/lib/libcurl.so.4\"" >> $pkgdir/opt/urbanterror/q3ut4/autoexec.cfg
}

