# $Id$
# Maintainer: Sergej Pupykin <pupykin.s+arch@gmail.com>

pkgname=pdmenu
pkgver=1.3.0
pkgrel=1
pkgdesc="simple full screen menu program"
arch=('i686' 'x86_64')
url="http://packages.debian.org/unstable/source/pdmenu"
license=('GPL')
depends=('gpm' 'slang')
optdepends=('perl')
source=(http://ftp.debian.org/debian/pool/main/p/pdmenu/pdmenu_$pkgver.tar.gz)
md5sums=('2530237cb0dca94905e03f12a320d78a')

build() {
  cd $srcdir/pdmenu
  ./configure --prefix=/usr --sysconfdir=/etc
  make
}

package() {
  cd $srcdir/pdmenu
  make INSTALL_PREFIX=$pkgdir install
}
