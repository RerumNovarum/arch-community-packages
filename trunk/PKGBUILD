# Contributor: Allan Henriksen <allan.henriksen@gmail.com>

pkgname=ipsec-tools
pkgver=0.7.2
pkgrel=1
pkgdesc="ipsec-tools"
arch=('i686' 'x86_64')
url="http://ipsec-tools.sourceforge.net/"
depends=('readline' 'openssl')
license=('GPL')
options=('!makeflags' '!libtool')
source=(http://downloads.sourceforge.net/sourceforge/ipsec-tools/$pkgname-$pkgver.tar.bz2 \
	build-fix.patch)
md5sums=('72861f005746ee27984b2ee715ecc629'
         '5fda0de744f5593aa4070e44d15c0562')

build() {
  cd $startdir/src/$pkgname-$pkgver

  patch -Np1 <../build-fix.patch || return 1
  sed -i 's#-Werror##' configure

  ./configure --prefix=/usr --enable-security-context=no
  make || return 1
  make DESTDIR=$startdir/pkg install || return 1

  rmdir $startdir/pkg/usr/var/racoon && \
  rmdir $startdir/pkg/usr/var
}
