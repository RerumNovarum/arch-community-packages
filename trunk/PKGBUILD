pkgname=ufoai-data
pkgver=2.3.1
pkgrel=2
pkgdesc="In UFO: Alien Invasion you fight aliens trying to capture Earth (data files)"
arch=('any')
url="http://ufoai.ninex.info/"
license=('GPL')
depends=()
source=(http://downloads.sourceforge.net/sourceforge/ufoai/ufoai-$pkgver-data.tar
        http://mattn.ninex.info/1maps.pk3)
#source=(http://downloads.sourceforge.net/project/ufoai/UFO_AI%202.x/$pkgver/data.tar)
md5sums=('11468144bc00618c38667eec04b12a4a'
         '0187f2169401d59423c6e01184fff90d')

build() {
  msg "Nothing to build, lol"  
}

package() {
  install -d -m755 "$pkgdir"/usr/share/ufoai
  cp -r "$srcdir"/base "$pkgdir"/usr/share/ufoai

  # hotfix, remove in 2.3.2
  cp $srcdir/1maps.pk3 $pkgdir/usr/share/ufoai/base/
}

