# $Id: PKGBUILD,v 1.8 2009/04/09 09:51:56 sergej Exp $
# Maintainer: Sergej Pupykin <pupykin.s+arch@gmail.com>
# Contributor: Krzysztof Stasiorowski <krzysiekst@gmail.com>

pkgname=qpxtool
pkgver=0.6.1
pkgrel=3
pkgdesc="QPxTool is the Open Source Solution which intends to give you access \
	to all available Quality Checks."
arch=('i686' 'x86_64')
url="http://qpxtool.sourceforge.net/"
license=('GPL')
depends=('qt3')
source=(http://downloads.sourceforge.net/sourceforge/$pkgname/$pkgname-$pkgver.tar.bz2 \
	qpxtool.desktop
	qpx_transport.patch)
md5sums=('4fa7ce8aa9c13aa2db0a8b5224acb906'
         'd60fb7ca0dbb2c4da11dc43adf2a1de4'
         '042ec368f7001817bf86e96cfbc58b89')

build() {
  . /etc/profile.d/qt3.sh
  export PATH=$QTDIR/bin:$PATH
  cd $startdir/src/$pkgname-$pkgver
  mv $startdir/src/qpx_transport.patch .
  patch -p1 < qpx_transport.patch
  make || return 1
  make PREFIX=$startdir/pkg/usr MANDIR=$startdir/pkg/usr/share/man install || return 1

  install -D -m0644 $startdir/src/qpxtool.desktop $startdir/pkg/usr/share/applications/qpxtool.desktop
}
