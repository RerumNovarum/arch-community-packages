pkgname=python-south
pkgver=0.7.4
pkgrel=1
pkgdesc="Intelligent database migrations library for the Django web framework"
arch=('any')
url="http://south.aeracode.org/"
license=('APACHE')
depends=('django')
makedepends=('python2-distribute')
provides=('south')
conflicts=('south')
replaces=('south')
source=(http://pypi.python.org/packages/source/S/South/South-$pkgver.tar.gz)
sha256sums=('7ece3218af51f8998d2d9630e25aae62c971eca4307019d3ef422614c365dac8')

build() {
  cd "$srcdir/South-$pkgver"

  python2 setup.py build
}

package() {
  cd "$srcdir/South-$pkgver"
  python2 setup.py install --root="$pkgdir" -O1
}

