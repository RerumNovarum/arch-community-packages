pkgname=pcsxr
pkgver=1.9.92
_pkgver=19556
pkgrel=4
pkgdesc='Sony PlayStation (PSX) emulator based on the PCSX-df project'
arch=('i686' 'x86_64')
url='http://pcsxr.codeplex.com/'
license=('GPL')
depends=('libcdio' 'libgl' 'libglade' 'libxtst' 'libxv' 'sdl')
_pkgurl="http://download.codeplex.com/Project/Download/FileDownload.aspx?ProjectName=$pkgname&DownloadId=140521&FileTime=129254829621800000&Build=$_pkgver"
source=($pkgname-$pkgver.tar.bz2::$_pkgurl)

build() {
    cd "$srcdir/$pkgname-$pkgver"
    ./configure --prefix=/usr --enable-libcdio --enable-opengl
    make
}

package() {
    cd "$srcdir/$pkgname-$pkgver"
    make DESTDIR="$pkgdir" install
}

md5sums=('28411aed0b4424f97227d94bdefaec83')
