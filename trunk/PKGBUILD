# $Id$
# Maintainer: Lukas Jirkovsky <l.jirkovsky@gmail.com>
pkgname=gimp-plugin-fblur
pkgver=3.2.6
pkgrel=1
pkgdesc="Makes out of focus with luminosity and depth"
arch=('i686' 'x86_64')
url="http://sudakyo.hp.infoseek.co.jp/gimp/fblur/focusblur_e.html"
license=('GPL')
depends=('gimp' 'fftw')
makedepends=('intltool')
source=(http://sudakyo.hp.infoseek.co.jp/gimp/fblur/focusblur-$pkgver.tar.xz)
md5sums=('fa68be5022f02a1922d6e85103a482d4')

build() {
  cd "$srcdir"/focusblur-$pkgver
  ./configure --prefix=/usr
  make
}

package() {
  cd "$srcdir"/focusblur-$pkgver
  make DESTDIR="$pkgdir" install
}
