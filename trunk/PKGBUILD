# Contributor: Andrea Scarpino <andrea@archlinux.org>
# Contributor: Vinay S Shastry <vinayshastry@gmail.com>

pkgname=qmpdclient
pkgver=1.2
pkgrel=1
pkgdesc="A Qt4 client for MPD"
arch=('i686' 'x86_64')
url="http://bitcheese.net/wiki/QMPDClient"
license=('GPL')
depends=('qt' 'openssl' 'hicolor-icon-theme')
makedepends=('cmake')
install=$pkgname.install
changelog=$pkgname.changelog
source=(http://dump.bitcheese.net/files/$pkgname-$pkgver.tar.bz2)
sha256sums=('9b183bd3e621fdb6a0f7fa44cc3d2d9a0047461d0dfa13e175e0ed2116032aee')

build() {
  cd ${srcdir}

  mkdir build
  cd build

  cmake ../${pkgname} -DCMAKE_INSTALL_PREFIX=/usr
  make
}

package() {
  cd ${srcdir}/build

  make DESTDIR=${pkgdir} install
}
