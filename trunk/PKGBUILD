pkgname=bwidget
pkgver=1.9.0
pkgrel=2
pkgdesc="A suite of megawidgets for Tk"
arch=('any')
url="http://tcl.activestate.com/software/tcllib/"
license=('GPL')
depends=('bash' 'tcl')
source=("http://downloads.sourceforge.net/tcllib/BWidget-$pkgver.tar.gz")
md5sums=('d4d31f0279c87b024aa3f900a8cbf549')

package() {
  cd "${srcdir}"
  install -d "${pkgdir}"/usr/lib/tcl8.5
  cp -r BWidget-$pkgver "${pkgdir}"/usr/lib/tcl8.5/
}
