# $Id$
# Contributor: Sergej Pupykin <pupykin.s+arch@gmail.com>

pkgname=freewrl
pkgver=1.22.5
pkgrel=4
pkgdesc="VRML viewer"
arch=('i686' 'x86_64')
url="http://freewrl.sourceforge.net/"
license=('GPL')
depends=('java-runtime' 'libx11' 'libjpeg' 'libpng' 'expat' 'mesa' 'lesstif' 'libxaw' 'glew' 'curl')
makedepends=('java-environment' 'xulrunner')
optdepends=('ttf-bitstream-vera: text support')
options=(!libtool)
source=(http://downloads.sourceforge.net/sourceforge/$pkgname/$pkgname-$pkgver.tar.bz2 fixplugin.diff)
md5sums=('da6ea22b3b7e89d9de6a628aa9c7229c'
         'ef28e4f8a1024d68edbe6dddf6d37623')

build() {
  . /etc/profile.d/openjdk6.sh
  cd $srcdir/$pkgname-$pkgver
  patch -Np0 -i $srcdir/fixplugin.diff

  LDFLAGS="-Wl,-rpath -Wl,/usr/lib/xulrunner-devel-1.9.1/lib" ./configure \
    --prefix=/usr --with-fontsdir=/usr/share/fonts/TTF --enable-libeai \
    --enable-libcurl
  make || return 1
  make DESTDIR=$pkgdir install || return 1

  mkdir -p $pkgdir/usr/lib/mozilla/plugins
  mv $pkgdir/mozilla/plugins/* $pkgdir/usr/lib/mozilla/plugins/ && \
  rm -rf $pkgdir/mozilla
}
