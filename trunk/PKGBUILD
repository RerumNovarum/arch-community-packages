pkgname=alienarena-data
_pkgbasename=alienarena
pkgver=7.50
pkgrel=2
_verdate=20101214
pkgdesc="Multiplayer retro sci-fi deathmatch game (data files)"
arch=('any')
url='http://icculus.org/alienarena/rpa/'
license=('GPL')
source=(http://icculus.org/alienarena/Files/alienarena-7_50-linux${_verdate}.tar.gz)
md5sums=('40e44cb49f5bc6ff6c8abcead897b29a')
 
build() {
  cd "$srcdir/$_pkgbasename-$pkgver"

}

package() {
  cd "$srcdir/$_pkgbasename-$pkgver"

  mkdir -p "$pkgdir/usr/share/$_pkgbasename"
  cp -r aa.png arena botinfo data1 "$pkgdir/usr/share/$_pkgbasename"
}
