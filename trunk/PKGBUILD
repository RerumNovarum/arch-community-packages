# Contributor: Sergej Pupykin <pupykin.s+arch@gmail.com>

pkgname=punbb
pkgver=1.4.2
pkgrel=1
pkgdesc="forum engine"
arch=('any')
url="http://punbb.informer.com"
license=("GPL")
depends=(php)
backup=('srv/http/punbb/.htaccess')
source=(http://punbb.informer.com/download/$pkgname-$pkgver.zip
        http://punbb.informer.com/extensions/pun_antispam/pun_antispam.tgz)
md5sums=('4d76707be8cd07c9470ab46e7d31a4a6'
         'a0c33628608e429345a0eef789db68ac')

build() {
  cd $srcdir
  install -d -m0755 $pkgdir/srv/http
  cp -r PunBB-$pkgver $pkgdir/srv/http/punbb
  echo "deny from all" > $pkgdir/srv/http/punbb/.htaccess
  cp -r $srcdir/pun_antispam $pkgdir/srv/http/punbb/extensions
  cd $pkgdir
  find -type d -exec chmod 0755 {} \;
  find -type f -exec chmod 0644 {} \;
  chmod 0777 $pkgdir/srv/http/punbb/img/avatars $pkgdir/srv/http/punbb/cache
}
