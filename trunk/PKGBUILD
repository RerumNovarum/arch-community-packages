# $Id$
# Maintainer: Balló György <ballogyor+arch at gmail dot com>

pkgname=tasque
pkgver=0.1.11
pkgrel=1
pkgdesc="Easy quick task management app written in C Sharp"
arch=('any')
url="http://live.gnome.org/Tasque"
license=('MIT')
depends=('notify-sharp' 'sqlite' 'hicolor-icon-theme' 'xdg-utils')
makedepends=('intltool' 'gnome-common')
install=$pkgname.install
source=(http://ftp.gnome.org/pub/GNOME/sources/$pkgname/${pkgver%.*}/$pkgname-$pkgver.tar.xz
        drop-gnome-sharp.patch
        drop-gconf.patch
        use-dbus-sharp.patch)
sha256sums=('c2fa0932a8339aea1fc1faa419a714abd3e471ae40312803d63592f1584451aa'
            'a84b934dcf2fbc0f8e4ba79de7041144d81c2cd4d6b6a22981a3cc2c6e3d1977'
            'da51a83d35b21bfc62459fa1c9cd22976dc1b82c6f725ed7ab75e502f00922f8'
            '69974bd9e3b055d9de6c7f8e143a999ea57c1ccc5d2badc26d754225adf5bf0c')

build() {
  cd "$srcdir/$pkgname-$pkgver"

  # Remove some dependencies
  # https://bugzilla.gnome.org/show_bug.cgi?id=670391
  patch -Np1 -i "$srcdir/drop-gnome-sharp.patch"
  patch -Np1 -i "$srcdir/drop-gconf.patch"
  # https://bugzilla.gnome.org/show_bug.cgi?id=671553
  patch -Np1 -i "$srcdir/use-dbus-sharp.patch"
  sed -i 's/pkglib_DATA/pkgdata_DATA/' Makefile.am

  autoreconf -fi
  ./configure --prefix=/usr --sysconfdir=/etc --localstatedir=/var \
              --disable-static --disable-appindicator
  make
}

package() {
  cd "$srcdir/$pkgname-$pkgver"

  make DESTDIR="$pkgdir/" install
  install -Dm644 COPYING ${pkgdir}/usr/share/licenses/$pkgname/COPYING
}
