pkgname=dxpc
pkgver=3.9.2
pkgrel=1
pkgdesc="Differential X Protocol Compressor"
arch=(i686 x86_64)
url="http://www.vigor.nu/dxpc/"
license=('GPL')
depends=(lzo2 gcc xorg-server)
makedepends=()
provides=()
conflicts=()
replaces=()
backup=()
install=
source=(http://www.vigor.nu/dxpc/dxpc-$pkgver.tgz)
noextract=()
md5sums=('e69f58c4acc34c6746a0e5ab17bf8d0f')

build() {
  cd $startdir/src/$pkgname-$pkgver
  ./configure --prefix=/usr --mandir=$pkgdir/usr/share
  make || return 1
  make prefix=${pkgdir}/usr install
}
